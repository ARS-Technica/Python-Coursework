# Function
# def my_function(a, b, c):
    # Do this with a
    # Then do this with b
    # Finally do this c


# Function with multiple inputs
def greet_with(name, location):
    print(f"Hello {name}.")
    print(f"What is it like in {location}?")

greet_with("Jack Bauer", "New York")
greet_with("Andrew", "Kalamazoo")


# Keywork Arguments
# def my_function(a=1, b=2, c=3) # Include both the parameter AND argument inside the parenthesis


# Function with keyword arguments
greet_with(name="Andrew", location="Kalamazoo") # Less error prone, but longer lines of code

